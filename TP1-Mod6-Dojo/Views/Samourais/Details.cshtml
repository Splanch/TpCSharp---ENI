@model BODojo.Samourai

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Arme)
        </dt>
        <dd>
            @if (Model.Arme != null)
            {
                @Html.DisplayFor(model => model.Arme.Nom)
            }
            else
            {
                <div> Pas d'arme</div>}


        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ArtMartials)
        </dt>
        <dd>
            @if (Model.ArtMartials.Count > 0)
            {
                foreach (var art in Model.ArtMartials)
                {
                    @Html.DisplayFor(x => art.Nom)<br />
                }
            }
            else
            {
                <div> Pas d'arts martiaux</div>}


        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Potentiel)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Potentiel)
        </dd>





    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
