@model TP1_Mod6_Dojo.Models.SamouraiVM

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Etes vous sur de vouloir supprimer cet élément ? </h3>
<div>
    <h4>Samourai</h4>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Force)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Samourai.Force)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Samourai.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Arme)
        </dt>
        <dd>
            @if (Model.Samourai.Arme != null)
            {
                @Html.DisplayFor(model => model.Samourai.Arme.Nom)
            }
            else
            {
                <div> Pas d'arme</div>}


        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Samourai.ArtMartials)
        </dt>
        <dd>
            @if (Model.Samourai.ArtMartials.Count > 0)
            {
                foreach (var art in Model.Samourai.ArtMartials)
                {
                    @Html.DisplayFor(x => art.Nom)<br />
                }
            }
            else
            {
                <div> Pas d'arts martiaux</div>}


        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Samourai.Potentiel)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Samourai.Potentiel)
        </dd>



    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Samourai.Id)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
